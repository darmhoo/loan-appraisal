<div class="max-w-7xl mx-auto mt-6 px-4">
  <h2 class="text-2xl font-semibold mb-4">Loan Application - Credit History</h2>
  
  <%= render 'shared/progress_bar', step: step %>

  <%= form_with model: @loan_application, url: wizard_path(step, loan_application_id: @loan_application.id), local: true do |form| %>
    <% if @loan_application.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <ul class="list-disc pl-5">
          <% @loan_application.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="bg-white shadow rounded-lg">
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

          <div>
            <div class="mb-4">
              <%= form.label :credit_score, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.number_field :credit_score, class: "w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>

            <div class="mb-4">
              <%= form.label :past_behavior, "Past Behavior", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_area :past_behavior, class: "w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", rows: 3 %>
            </div>

            <div class="mb-4">
              <%= form.label :defaults_late_payments, "Defaults / Late Payments", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_area :defaults_late_payments, class: "w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", rows: 3 %>
            </div>
          </div>

        </div>
      </div>
    </div>

    <div class="flex justify-between mt-6">
      <%= link_to "Back", previous_wizard_path(loan_application_id: @loan_application.id), class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg text-sm font-medium shadow" %>
      <div class="space-x-2">
        <%= form.submit "Save & Exit", name: "commit", class: "bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg text-sm font-medium shadow" %>
        <%= form.submit "Next", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow" %>
      </div>
    </div>
  <% end %>
</div>
