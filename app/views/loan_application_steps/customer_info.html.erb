<div class="max-w-7xl mx-auto mt-6 px-4">
  <h2 class="text-2xl font-semibold mb-4">Loan Application - Credit History</h2>
  
  <%= render 'shared/progress_bar', step: step %>

  <%# <%= form_with model: @loan_application, url: wizard_path(step, loan_application_id: @loan_application.id), local: true do |form| %>
  <%= form_with model: @loan_application, 
              url: wizard_path(step, loan_application_id: @loan_application.id || 'new'), 
              method: :put, 
              local: true do |form| %>


    <% if @loan_application.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <ul class="list-disc pl-5">
          <% @loan_application.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="bg-white shadow rounded-lg">
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <div class="mb-4">
              <%= form.label :full_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_field :full_name, class: "w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>

            <div class="mb-4">
              <%= form.label :contact_details, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_area :contact_details, class: "w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", rows: 3 %>
            </div>

            <div class="mb-4">
              <%= form.label :identification, "ID/Passport", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_field :identification, class: "w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>

            <div class="mb-4">
              <%= form.label :employment_status, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :employment_status, 
                  options_for_select([
                    ['Employed', 'Employed'],
                    ['Self-Employed', 'Self-Employed'],
                    ['Unemployed', 'Unemployed'],
                    ['Retired', 'Retired']
                  ], @loan_application.employment_status), 
                  { prompt: 'Select Employment Status' }, 
                  { class: "w-full border rounded-lg px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
            </div>
          </div>

          <div>
            <div class="mb-4">
              <%= form.label :employer, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_field :employer, class: "w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>

            <div class="mb-4">
              <%= form.label :monthly_income, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <div class="flex rounded-lg border overflow-hidden">
                <span class="px-3 bg-gray-100 flex items-center text-gray-700">$</span>
                <%= form.number_field :monthly_income, step: 0.01, class: "w-full px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              </div>
            </div>

            <div class="mb-4">
              <%= form.label :monthly_expenses, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <div class="flex rounded-lg border overflow-hidden">
                <span class="px-3 bg-gray-100 flex items-center text-gray-700">$</span>
                <%= form.number_field :monthly_expenses, step: 0.01, class: "w-full px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="flex justify-between mt-6">
      <%= link_to "Cancel", loan_applications_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg text-sm font-medium shadow" %>
      <div class="space-x-2">
        <%= form.submit "Save & Exit", name: "commit", class: "bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg text-sm font-medium shadow" %>
        <%= form.submit "Next", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow" %>
      </div>
    </div>
  <% end %>
</div>
