<% content_for :title, "Customer Infos" %>

<div class="w-full max-w-5xl mx-auto px-4 py-8">
  <% if notice.present? %>
    <p class="py-2 px-4 mb-6 bg-green-100 text-green-700 border border-green-300 rounded-md font-medium text-center shadow-sm" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <div class="flex flex-col sm:flex-row justify-between items-center mb-8 space-y-4 sm:space-y-0">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-gray-800">Customer Infos</h1>
    <%= link_to "âž• New Customer Info", new_customer_info_path,
        class: "inline-block rounded-lg px-4 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-semibold transition" %>
  </div>

  <div id="customer_infos" class="space-y-8">
    <% if @customer_infos.any? %>
      <% @customer_infos.each do |customer_info| %>
        <div class="p-6 border border-gray-200 rounded-xl shadow-sm bg-white">
          <%= render customer_info %>

          <!-- Action buttons placed below -->
          <div class="mt-4 flex flex-col sm:flex-row sm:justify-start gap-3">
            <%= link_to "ðŸ‘ï¸ Show", customer_info,
                class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium text-center" %>

            <%= link_to "âœï¸ Edit", edit_customer_info_path(customer_info),
                class: "rounded-md px-4 py-2 bg-yellow-100 hover:bg-yellow-200 text-yellow-800 font-medium text-center" %>

            <%= button_to "ðŸ—‘ï¸ Destroy", customer_info, method: :delete,
                class: "rounded-md px-4 py-2 bg-red-600 hover:bg-red-500 text-white font-medium text-center",
                data: { turbo_confirm: "Are you sure you want to delete this customer info?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center text-gray-600 text-lg my-10">No customer infos found.</p>
    <% end %>
  </div>
</div>
