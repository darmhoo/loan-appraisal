<h2 class="text-2xl font-bold mb-6 text-gray-800">Loan Details</h2>

<%= form_for @form, url: wizard_path, method: :put, html: { class: "space-y-6" } do |f| %>
  <div>
    <%= f.label :loan_amount, "Loan Amount Requested", class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :loan_amount, step: 0.01, class: "mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:ring focus:border-blue-300" %>
  </div>

  <div>
    <%= f.label :loan_purpose, "Purpose of the Loan", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :loan_purpose, class: "mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:ring focus:border-blue-300" %>
  </div>

  <div>
    <%= f.label :loan_tenure, "Loan Tenure (e.g. 12 months)", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :loan_tenure, class: "mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:ring focus:border-blue-300" %>
  </div>

  <div>
    <%= f.label :repayment_frequency, "Repayment Frequency", class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :repayment_frequency, ["Monthly", "Quarterly", "Bi-Annually"], {}, class: "mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:ring focus:border-blue-300" %>
  </div>

  <div class="flex justify-between items-center pt-4">
    <%= link_to "Back", previous_wizard_path, class: "inline-block bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded" %>

    <%= f.submit "Next", class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
  </div>
<% end %>
