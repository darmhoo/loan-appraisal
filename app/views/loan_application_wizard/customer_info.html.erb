<div class="min-h-screen py-8 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="max-w-3xl mx-auto bg-white shadow-lg rounded-xl p-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-2">Customer Information</h1>

    <%= form_for @form, url: wizard_path, method: :put, html: { class: "space-y-6" } do |f| %>

      <div>
        <%= f.label :full_name, "Full Name", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :full_name, class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm h-8 px-3 focus:ring-blue-500 focus:border-blue-500 text-base" %>
      </div>

      <div>
        <%= f.label :contact, "Contact", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :contact, class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm h-8 px-3 focus:ring-blue-500 focus:border-blue-500 text-base" %>
      </div>

      <div>
        <%= f.label :id_number, "ID Number", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :id_number, class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm h-8 px-3 focus:ring-blue-500 focus:border-blue-500 text-base" %>
      </div>

      <div>
        <%= f.label :employment_status, "Employment Status", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :employment_status, class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm h-8 px-3 focus:ring-blue-500 focus:border-blue-500 text-base" %>
      </div>

      <div>
        <%= f.label :employer, "Employer", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :employer, class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm h-8 px-3 focus:ring-blue-500 focus:border-blue-500 text-base" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= f.label :income, "Monthly Income", class: "block text-sm font-medium text-gray-700" %>
          <%= f.number_field :income, step: "0.01", class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm h-8 px-3 focus:ring-blue-500 focus:border-blue-500 text-base" %>
        </div>

        <div>
          <%= f.label :expenses, "Monthly Expenses", class: "block text-sm font-medium text-gray-700" %>
          <%= f.number_field :expenses, step: "0.01", class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm h-8 px-3 focus:ring-blue-500 focus:border-blue-500 text-base" %>
        </div>
      </div>

      <div class="pt-4">
        <%= f.submit "Next â†’", class: "inline-flex cursor-pointer items-center px-6 py-3 bg-blue-600 border border-transparent rounded-md font-semibold text-white hover:bg-blue-700 transition duration-300 text-base" %>
      </div>

    <% end %>
  </div>
</div>
