    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </div>

  <div>
    <%= f.label :contact %>
    <%= f.text_field :contact %>
  </div>

  <div>
    <%= f.label :id_number %>
    <%= f.text_field :id_number %>
  </div>

  <div>
    <%= f.label :employment_status %>
    <%= f.text_field :employment_status %>
  </div>

  <div>
    <%= f.label :employer %>
    <%= f.text_field :employer %>
  </div>

  <div>
    <%= f.label :income %>
    <%= f.number_field :income %>
  </div>

