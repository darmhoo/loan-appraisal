<div class="p-8  min-h-screen">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Loan Applications</h1>

    <div class="overflow-x-auto rounded-lg shadow-lg border border-gray-200">
      <table class="min-w-full divide-y divide-gray-200 text-sm text-gray-700 bg-white">
        <thead class="bg-blue-50 text-gray-700 uppercase text-xs tracking-wider">
          <tr>
            <th class="px-6 py-3 border-r border-gray-200 text-left">Full Name</th>
            <th class="px-6 py-3 border-r border-gray-200 text-left">Contact</th>
            <th class="px-6 py-3 border-r border-gray-200 text-left">Employment Status</th>
            <th class="px-6 py-3 border-r border-gray-200 text-left">Employer</th>
            <th class="px-6 py-3 border-r border-gray-200 text-left">Income (₦)</th>
            <th class="px-6 py-3 border-r border-gray-200 text-left">Status</th>
            <th class="px-6 py-3 text-left">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @loan_applications.each do |loan| %>
            <tr class="hover:bg-gray-50 transition">
              <td class="px-6 py-4 border-r border-gray-100"><%= loan.customer_info&.full_name || "-" %></td>
              <td class="px-6 py-4 border-r border-gray-100"><%= loan.customer_info&.contact || "-" %></td>
              <td class="px-6 py-4 border-r border-gray-100"><%= loan.customer_info&.employment_status || "-" %></td>
              <td class="px-6 py-4 border-r border-gray-100"><%= loan.customer_info&.employer || "-" %></td>
              <td class="px-6 py-4 border-r border-gray-100"><%= number_to_currency(loan.customer_info&.income || 0, unit: "₦", precision: 0) %></td>
              <td class="px-6 py-4 border-r border-gray-100">
                <span class="<%= loan.completed? ? 'text-green-600  border border-green-200 rounded-full px-3 py-1 text-xs font-semibold' : 'text-yellow-600 bg-yellow-50 border border-yellow-200 rounded-full px-3 py-1 text-xs font-semibold' %>">
                  <%= loan.completed? ? "Completed" : "In Progress" %>
                </span>
              </td>
              <td class="px-6 py-4 flex space-x-4 items-center">
                <%= link_to "Resume", loan_application_loan_application_wizard_path(loan, :customer_info), class: "text-blue-600 hover:underline text-sm font-medium" %>
                <%= button_to 'Delete', loan_application_path(loan), method: :delete, data: { confirm: 'Are you sure you want to delete this application?' }, class: 'cursor-pointer text-red-600 hover:underline bg-transparent border-none p-0 text-sm font-medium' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
