<h1 class="text-2xl font-bold mb-4">Loan Applications</h1>

<table class="min-w-full bg-white shadow-md rounded-lg">
  <thead class="bg-gray-100 text-left">
    <tr>
      <th class="px-4 py-2">Full Name</th>
      <th class="px-4 py-2">Contact</th>
      <th class="px-4 py-2">Status</th>
      <th class="px-4 py-2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @loan_applications.each do |loan| %>
      <tr class="border-b hover:bg-gray-50">
        <td class="px-4 py-2"><%= loan.customer_info&.full_name || "-" %></td>
        <td class="px-4 py-2"><%= loan.customer_info&.contact || "-" %></td>
        <td class="px-4 py-2">
          <span class="<%= loan.completed? ? 'text-green-600 font-medium' : 'text-yellow-600 font-medium' %>">
            <%= loan.completed? ? "Completed" : "In Progress" %>
          </span>
        </td>
        <td class="px-4 py-2 flex items-center space-x-2">
          <%= link_to "Resume", loan_application_loan_application_wizard_path(loan, :customer_info), class: "text-blue-600 hover:underline" %>
          <span class="mx-1 text-gray-400">/</span>
          <%= button_to 'Delete', loan_application_path(loan), method: :delete, data: { confirm: 'Are you sure you want to delete this customer?' }, class: 'text-red-600 hover:underline bg-transparent border-none p-0 inline' %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
