<div class="max-w-7xl mx-auto mt-6 px-4">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-semibold">Loan Applications</h2>
    <%= link_to "Create Loan Application", new_loan_application_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow" %>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full border border-gray-200 rounded-lg">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Full Name</th>
          <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Contact Details</th>
          <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Employment Status</th>
          <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Status</th>
          <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Progress</th>
          <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @loan_applications.each do |application| %>
          <tr class="hover:bg-gray-50">
            <%# <td class="px-4 py-2 text-sm text-gray-800">  <%= application.full_name || "N/A"</td> %>

            <td class="px-4 py-4 text-sm text-gray-800 flex items-center space-x-1">
              <% if application.recommendation_status.present? %>
                <span 
                  class="w-3 h-3 
                    <%= case application.recommendation_status
                        when 'Approved' then 'bg-green-500'
                        when 'Rejected' then 'bg-red-500'
                        when 'Pending'  then 'bg-yellow-400'
                        else 'bg-gray-400'
                        end %>">
                </span>
              <% end %>

              <span><%= application.full_name || "N/A" %></span>
            </td>

            
            <td class="px-4 py-2 text-sm text-gray-600"><%= truncate(application.contact_details, length: 50) %></td>
            <td class="px-4 py-2 text-sm text-gray-600"><%= application.employment_status %></td>
            <td class="px-4 py-2">
              <% if application.completed? %>
                <span class="inline-block px-2 py-1 text-xs font-semibold rounded bg-green-600 text-white">Completed</span>
              <% else %>
                <span class="inline-block px-2 py-1 text-xs font-semibold rounded bg-yellow-400 text-gray-800">In Progress</span>
              <% end %>
            </td>
            <td class="px-4 py-2">
              <div class="w-24 bg-gray-200 rounded-full h-3">
                <% progress = (application.completed_steps.count.to_f / 7 * 100).round %>
                <div class="bg-blue-600 h-3 rounded-full" style="width: <%= progress %>%"></div>
              </div>
              <small class="text-xs text-gray-600"><%= application.completed_steps.count %>/7 steps</small>
            </td>
            <td class="px-4 py-2 space-x-2">
              <% unless application.completed? %>
                <%= link_to "Resume", loan_application_step_path(id: application.next_step, loan_application_id: application.id), class: "bg-yellow-500 hover:bg-yellow-600 text-white px-2 py-1 rounded text-xs font-medium shadow" %>

              <% end %>
              <%= link_to "View", loan_application_path(application), class: "bg-blue-500 hover:bg-blue-600 text-white px-2 py-1 rounded text-xs font-medium shadow" %>
              <%= link_to "Delete", loan_application_path(application), method: :delete, 
                          confirm: "Are you sure?", class: "bg-red-600 hover:bg-red-700 text-white px-2 py-1 rounded text-xs font-medium shadow" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @loan_applications.empty? %>
      <div class="text-center py-10">
        <h5 class="text-lg font-medium">No loan applications found</h5>
        <p class="text-gray-500">Start by creating a loan application</p>
      </div>
    <% end %>
  </div>
</div>
