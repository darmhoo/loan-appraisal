<!-- app/views/customers/index.html.erb -->
<h1 class="text-2xl font-bold mb-6">Customer Information</h1>
<div class="overflow-x-auto bg-white shadow-md rounded-lg">
  <button>
    <%=
  link_to 'Download as Excel',
  customers_path(format: :xlsx), class: "bg-green-500 outline p-2 text-white"
%>
  </button>
  <table class="min-w-full text-sm text-left text-gray-700">
    <thead class="bg-gray-100 text-gray-600 uppercase text-xs">
      <tr>
        <th class="px-4 py-3">Full Name</th>
        <th class="px-4 py-3">Contact</th>
        <th class="px-4 py-3">ID Number</th>
        <th class="px-4 py-3">Employment Status</th>
        <th class="px-4 py-3">Employer</th>
        <th class="px-4 py-3">Income</th>
        <th class="px-4 py-3">Expenses</th>
        <th class="px-4 py-3">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @customers.each do |customer| %>
        <tr>
          <td class="px-4 py-2"><%= customer.full_name %></td>
          <td class="px-4 py-2"><%= customer.contact %></td>
          <td class="px-4 py-2"><%= customer.id_number %></td>
          <td class="px-4 py-2"><%= customer.employment_status %></td>
          <td class="px-4 py-2"><%= customer.employer %></td>
          <td class="px-4 py-2">₦<%= number_with_precision(customer.income, precision: 2) %></td>
          <td class="px-4 py-2">₦<%= number_with_precision(customer.expenses, precision: 2) %></td>
          <td class="px-4 py-2 space-x-2">

         <%= link_to "Resume",
          loan_application_wizard_path(customer.loan_application_id, customer.loan_application.next_incomplete_step || :customer_info),
          class: "inline-block px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700 text-xs" %>



            <!-- Delete Customer -->
            <%= link_to "Delete",
              customer_path(customer),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this customer?" },
              class: "inline-block px-3 py-1 bg-red-600 text-white rounded hover:bg-red-700 text-xs" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
