<div class="bg-gray-800 text-white fixed top-0 left-0 w-full shadow-lg z-50">
  <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
    
    <div class="text-xl font-semibold tracking-wide">
      <%= link_to "Loan Appraisal", root_path, class: "hover:text-yellow-300 transition" %>
    </div>

    <% if user_signed_in? %>
      <div>
        <%= button_to "Start Loan Application", start_loan_path, method: :post, class: "text-white hover:text-yellow-300 transition cursor-pointer" %>
      </div>
    <% end %>

    <ul class="flex space-x-6 text-sm font-medium items-center">
      <% if user_signed_in? %>
        <li class="text-yellow-300">
          Hi, <%= current_user.email %>
        </li>
        <li>
          <%= button_to "Sign out", destroy_user_session_path, method: :delete, data: { turbo: false }, class: "hover:text-red-400 transition" %>
        </li>
      <% else %>
        <li>
          <%= link_to "Sign in", new_user_session_path, class: "hover:text-yellow-300 transition" %>
        </li>
        <li>
          <%= link_to "Sign up", new_user_registration_path, class: "hover:text-yellow-300 transition" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
